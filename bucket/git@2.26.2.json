{
  "version": "2.40.1.windows.1",
  "homepage": "https://gitforwindows.org",
  "description": "Distributed version control system.",
  "license": "GPL-2.0-only",
  "architecture": {
    "64bit": {
      "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v2.40.1.windows.1/PortableGit-2.40.1-64-bit.7z.exe#/dl.7z",
      "hash": "9e1d819aef3284420adf6d923b0d4865254bd403641d915975e49ddea1e7cdf9"
    },
    "32bit": {
      "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v2.40.1.windows.1/PortableGit-2.40.1-32-bit.7z.exe#/dl.7z",
      "hash": "e1360e94cb292862fb023018578a1029022a09278b160f7264c6dc444f65c9ca"
    }
  },
  "bin": [
    "cmd\\git.exe",
    "cmd\\gitk.exe",
    "cmd\\git-gui.exe",
    "usr\\bin\\tig.exe",
    "git-bash.exe"
  ],
  "shortcuts": [
    [
      "git-bash.exe",
      "Git Bash",
      "--cd-to-home"
    ],
    [
      "cmd\\git-gui.exe",
      "Git GUI"
    ]
  ],
  "post_install": [
    "# ref: [PortableGit post-install]<https://github.com/git-for-windows/build-extra/tree/33ce2964376587bbe7fcf97789470701178087af/portable/root>[`@`](https://archive.is/BSBYG)",
    "#  ... from CMD: `start \"\" /min \"%COMSPEC%\" /d/c \"DIR\\post-install.bat\"`",
    "if (test-path \"$dir\\post-install.bat\") { start-process \"$dir\\post-install.bat\" -WindowStyle hidden }",
    "git config --global credential.helper manager"
  ],
  "checkver": {
    "github": "https://github.com/git-for-windows/git",
    "regex": "v([\\w.]+)/PortableGit-(?<ver>[\\d\\w.]+)-64-bit"
  },
  "env_set": {
    "GIT_INSTALL_ROOT": "$dir"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v$version/PortableGit-$matchVer-64-bit.7z.exe#/dl.7z"
      },
      "32bit": {
        "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v$version/PortableGit-$matchVer-32-bit.7z.exe#/dl.7z"
      }
    },
    "hash": {
      "url": "https://github.com/git-for-windows/git/releases/latest",
      "regex": "<td>$basename</td>\\s*<td>$sha256</td>"
    }
  }
}
