{
  "version": "latest",
  "description": "C/C++ dependency manager from Microsoft For all platforms, buildsystems, and workflows",
  "homepage": "https://vcpkg.io/",
  "license": "MIT",
  "url": "https://ghproxy.com/https://github.com/microsoft/vcpkg/archive/refs/tags/2022.08.15.zip",
  "hash": "cdc4f501413c51dd7fbc21969eaa3355393c3a0d4e2b861f1bbef95416f3465c",
  "extract_dir": "vcpkg-2022.08.15",
  "bin": [
    "vcpkg.exe",
    [
      "bootstrap-vcpkg.bat",
      "vcpkg-update"
    ]
  ],
  "env_set": {
    "VCPKG_ROOT": "$dir",
    "VCPKG_DEFAULT_TRIPLET": "x64-windows-static"
  },
  "pre_install": [
    "& cd $dir",
    "& git init .",
    "& git remote add origin https://github.com/microsoft/vcpkg",
    "& git remote update --prune",
    "& git checkout --track origin/master -f",
    "& git reset --hard",
    "& git clean -fdx",
    "& $dir\\bootstrap-vcpkg.bat -disableMetrics"
  ],
  "post_install": "& vcpkg integrate install",
  "persist": [
    "downloads",
    "installed"
  ],
  "checkver": {
    "github": "https://github.com/microsoft/vcpkg/"
  },
  "autoupdate": {
    "url": "https://ghproxy.com/https://github.com/microsoft/vcpkg/archive/refs/tags/$version.zip",
    "extract_dir": "vcpkg-$version"
  }
}
