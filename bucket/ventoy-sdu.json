    "hash": "8c3d971d9a0647186d6e435e8ab3b0fd498f0bd15ee4990a520219a1b5470471",
    "extract_dir": "ventoy-1.0.80",
    "pre_install": [
        "'log.txt', 'Ventoy2Disk.ini' | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" -ItemType File | Out-Null }",
        "}"
    ],
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "altexe\\Ventoy2Disk_X64.exe",
                    "Ventoy2Disk"
                ],
                [
                    "VentoyPlugson.exe",
                    "VentoyPlugson"
                ],
                [
                    "VentoyVlnk.exe",
                    "VentoyVlnk",
                    "-s"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "Ventoy2Disk.exe",
                    "Ventoy2Disk"
                ],
                [
                    "VentoyPlugson.exe",
                    "VentoyPlugson"
                ],
                [
                    "VentoyVlnk.exe",
                    "VentoyVlnk",
                    "-s"
                ]
            ]
        }
    },
    "persist": [
        "log.txt",
        "Ventoy2Disk.ini"
    ],
    "checkver": {
        "url": "https://mirrors.sdu.edu.cn/github-release/ventoy_Ventoy/",
        "regex": "v(\\d[\\d.]+)",
        "reverse": true
    },
    "autoupdate": {
        "url": "https://mirrors.sdu.edu.cn/github-release/ventoy_Ventoy/v$version/ventoy-$version-windows.zip",
        "hash": {
            "url": "https://github.com/ventoy/Ventoy/releases/tag/v$version",
            "regex": "$basename:\\s+$checksum"
        },
        "extract_dir": "ventoy-$version"
    }
}
