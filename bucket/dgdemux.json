    "homepage": "https://www.rationalqm.us/dgdemux/dgdemux.html",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://www.videohelp.com/download/DGDemux_1.0.0.82.zip",
            "hash": "12f25705351de9c005ca4965078647116486460fd87f4f51e5c3c54a0abb17c2"
        }
    },
    "bin": [
        "DGDemux.exe",
        "DGDemuxGUI.exe",
        "DGDemuxGUI_Files.exe",
        "DGMVCCombine.exe",
        "dovi_tool.exe",
        "MediaInfoCLI.exe"
    ],
    "shortcuts": [
        [
            "DGDemuxGUI.exe",
            "DGDemux GUI"
        ],
        [
            "DGDemux.exe",
            "DGDemux CLI"
        ],
        [
            "DGDemuxGUI_Files.exe",
            "DGDemux GUI Files"
        ]
    ],
    "pre_install": [
        "\"DGDemux.ini\", \"DGDemux_Files.ini\" | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\$_\")) {",
        "        New-Item \"$dir\\$_\" -ItemType File -Force | Out-Null",
        "    }",
        "}"
    ],
    "persist": [
        "DGDemux.ini",
        "DGDemux_Files.ini"
    ],
    "checkver": {
        "url": "https://www.videohelp.com/software/DGDemux",
        "regex": "Latest version\\s+([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.videohelp.com/download/DGDemux_$version.zip"
            }
        },
        "hash": {
            "mode": "download"
        }
    }
}
