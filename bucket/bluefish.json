{
    "version": "2.2.19",
    "description": "A powerful editor targeted towards programmers and webdevelopers.",
    "homepage": "https://bluefish.openoffice.nl/",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://www.bennewitz.com/bluefish/stable/binaries/windows_x64/Bluefish%202.2.19%20Setup.exe#/dl.7z",
            "hash": "sha256:61b660b38db03dde73beb4946490f27b81ef24841209f0d800aad6a5414ac81f"
        },
        "32bit": {
            "url": "https://www.bennewitz.com/bluefish/stable/binaries/win32/Bluefish-2.2.14beta-setup.exe#/dl.7z",
            "hash": "sha256:45f271d3c5cbc6e98f6a5fd98aebbf347abb68100c367deb4d3d756c444b22a3"
        }
    },
    "bin": "bluefish.exe",
    "shortcuts": [
        [
            "bluefish.exe",
            "Bluefish"
        ]
    ],
    "post_install": [
        "# Clean up NSIS plugin directory",
        "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse -ErrorAction SilentlyContinue",
        "# Remove uninstaller since we don't need it for portable install",
        "Remove-Item \"$dir\\uninstall.exe\" -Force -ErrorAction SilentlyContinue"
    ],
    "post_uninstall": [
        "# Remove user settings if purging",
        "if (`$purge) {",
        "    Remove-Item \"$env:USERPROFILE\\.bluefish\" -Force -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "notes": "Bluefish is NOT portable. Settings are stored in '%USERPROFILE%\\.bluefish', and will be purged during uninstallation.",
    "checkver": {
        "url": "https://www.bennewitz.com/bluefish/stable/binaries/windows_x64/",
        "regex": "Bluefish ([\\d.]+) Setup\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.bennewitz.com/bluefish/stable/binaries/windows_x64/Bluefish%20$version%20Setup.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://www.bennewitz.com/bluefish/stable/binaries/win32/Bluefish-$version-setup.exe#/dl.7z"
            }
        }
    }
}