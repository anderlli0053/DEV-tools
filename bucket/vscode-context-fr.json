{
  "version": "0.0.1",
  "description": "Add explorer context menu entries for vscode - French version.",
  "depends": "extras/vscode",
  "url": [
    "https://ghproxy.com/https://raw.githubusercontent.com/mbl-35/scoop-srsrns/main/scripts/vscode-install-context.reg",
    "https://ghproxy.com/https://raw.githubusercontent.com/mbl-35/scoop-srsrns/main/scripts/vscode-uninstall-context.reg"
  ],
  "hash": [
    "b65d66860d9ccc18bfb05237b03e06db0d6c574be3d4b946c2a5e6865c08cb28",
    "df2a5162e72e2518e2b75b4337c8e7b46c136554872af90fa0de1cf6ebef376f"
  ],
  "installer": {
    "script": [
      "$codepath = \"$(appdir vscode $global)\\current\\Code.exe\".Replace('\\','\\\\')",
      "$content = Get-Content \"$dir\\vscode-install-context.reg\"",
      "$content = $content.Replace('$code', $codepath)",
      "$content = $content.Replace('Open with ','Ouvrir avec ')",
      "$content | Set-Content -Path \"$dir\\vscode-install-context.reg\"",
      "$Ucontent = Get-Content \"$dir\\vscode-uninstall-context.reg\"",
      "$Ucontent = $Ucontent.Replace('Open with ','Ouvrir avec ')",
      "$Ucontent | Set-Content -Path \"$dir\\vscode-uninstall-context.reg\"",
      "&(Get-Command reg.exe) import \"$dir\\vscode-install-context.reg\""
    ]
  },
  "uninstaller": {
    "script": "&(Get-Command reg.exe) import \"$dir\\vscode-uninstall-context.reg\""
  }
}
