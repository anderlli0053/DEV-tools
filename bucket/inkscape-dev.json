{
    "version": "1.3-dev_2022-10-17",
    "description": "Professional vector graphics editor",
    "homepage": "https://inkscape.org",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/inkscape/inkscape/-/jobs/3185083703/artifacts/raw/build/inkscape-1.3-dev_2022-10-17_71c746d8-x64.7z",
            "hash": "2f8ec21a9d8107fdf81d46ca49fc200f4b6459f597cb997e587be6f1c9fd4009"
        },
        "32bit": {
            "url": "https://gitlab.com/inkscape/inkscape/-/jobs/3179066061/artifacts/raw/build/inkscape-1.3-dev_2022-10-15_63886c36-x86.7z",
            "hash": "550ee3c1231797c704cc3778c4b9f0fe6da0d20002d875761ac9649bec280ae2"
        }
    },
    "extract_dir": "inkscape",
    "bin": [
        "bin\\inkscape.com",
        "bin\\inkview.com"
    ],
    "shortcuts": [
        [
            "bin\\inkscape.exe",
            "Inkscape Dev"
        ]
    ],
    "checkver": {
        "script": [
            "$urls =  @()",
            "'x32', 'x64' | ForEach-Object {",
            "    $base_url = 'https://alpha.inkscape.org/snapshots/latest_master_'+ $_ + '.html'",
            "    $dl_page = Invoke-WebRequest $base_url -UseBasicParsing",
            "    $dl = $dl_page.links | Where-Object href -match '\\.7z$' | Select-Object -first 1 -expand href",
            "    $urls += $dl",
            "}",
            "Write-Output ('urls:\"' + $urls + '\"')"
        ],
        "regex": "urls:\"(?<win32bit>.+inkscape-[\\d._\\-dev]+_\\w+-.+)\\s(?<win64bit>.+inkscape-(?<version>[\\d._\\-dev]+)_\\w+-.+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchWin64bit"
            },
            "32bit": {
                "url": "$matchWin32bit"
            }
        }
    }
}
