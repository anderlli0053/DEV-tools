{
    "version": "2.37.3",
    "description": "Distributed version control system(Download from TUNA mirror).",
    "homepage": "https://gitforwindows.org",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://mirrors.tuna.tsinghua.edu.cn/github-release/git-for-windows/git/LatestRelease/PortableGit-2.37.3-64-bit.7z.exe#/dl.7z",
            "hash": "ecd013c3aecdde0ffb363d5058d379a9c4037ff9ffbc004218632e288490f35c"
        },
        "32bit": {
            "url": "https://mirrors.tuna.tsinghua.edu.cn/github-release/git-for-windows/git/LatestRelease/PortableGit-2.37.3-32-bit.7z.exe#/dl.7z",
            "hash": "fbb50b45117ee1ca559e353f19b9a903f08febba50bd88fb4c3c3ddf533f024c"
        }
    },
    "post_install": "git config --global credential.helper manager-core",
    "bin": [
        "cmd\\git.exe",
        "cmd\\gitk.exe",
        "cmd\\git-gui.exe",
        "usr\\bin\\tig.exe",
        "git-bash.exe"
    ],
    "shortcuts": [
        [
            "git-bash.exe",
            "Git Bash",
            "--cd-to-home"
        ],
        [
            "cmd\\git-gui.exe",
            "Git GUI"
        ]
    ],
    "env_set": {
        "GIT_INSTALL_ROOT": "$dir"
    },
    "checkver": {
        "url": "https://mirrors.tuna.tsinghua.edu.cn/github-release/git-for-windows/git/",
        "regex": "Git for Windows ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://mirrors.tuna.tsinghua.edu.cn/github-release/git-for-windows/git/LatestRelease/PortableGit-$version-64-bit.7z.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://mirrors.tuna.tsinghua.edu.cn/github-release/git-for-windows/git/LatestRelease/PortableGit-$version-32-bit.7z.exe#/dl.7z"
            }
        },
        "hash": {
            "url": "https://github.com/git-for-windows/git/releases",
            "regex": "<td>$basename</td>\\s*<td>$sha256</td>"
        }
    }
}
