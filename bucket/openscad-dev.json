            "extract_dir": "openscad-2022.12.26.ci13049"
        },
        "32bit": {
            "url": "https://files.openscad.org/snapshots/OpenSCAD-2022.12.26.ci13051-x86-32.zip",
            "hash": "sha512:0bd6200eb6a794106ea4c226ffb5efd42511f2793510d57a8e6ef62af8f2e7cfae9fd7f3b442e10a64bda377a8b6552f3154b53f7d22a9917a4c876c02668678",
            "extract_dir": "openscad-2022.12.26.ci13051"
