{
    "autoupdate": {
        "url": "https://sourceforge.net/projects/anytxt/files/AnyTXT.Searcher.$version.$matchA.exe"
    },
    "bin": "ATGUI.exe",
    "checkver": {
        "regex": "AnyTXT.Searcher.([\\d.]+)\\.(?<a>(.+?))\\.exe",
        "url": "https://anytxt.net/download"
    },
    "description": "A local document search application",
    "hash": "sha1:b870d30d16ba3f7be2a9b6b92e1c51679acd725d",
    "homepage": "https://anytxt.net",
    "installer": {
        "args": [
            "/verysilent",
            "/dir=\"$dir\""
        ],
        "script": "sudo taskkill /F /IM ATService.exe | Out-Null"
    },
    "license": "freeware",
    "persist": "config.db",
    "post_install": "Remove-Item \"$Env:Public\\Desktop\\AnyTXT*.lnk\"",
    "shortcuts": [
        [
            "ATGUI.exe",
            "AnyTXT"
        ]
    ],
    "uninstaller": {
        "args": "/verysilent",
        "file": "unins000.exe"
    },
    "url": "https://sourceforge.net/projects/anytxt/files/AnyTXT.Searcher.1.3.1039.Win32_Win64.exe",
    "version": "1.3.1039"
}
