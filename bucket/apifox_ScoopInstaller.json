{
    "version": "2.3.24",
    "description": "All-in-one collaboration platform for API documentation, API debugging, API Mock and API test automation.",
    "homepage": "https://apifox.com",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://cdn.apifox.cn/download/2.3.24/Apifox-2.3.24.exe#/dl.7z",
            "hash": "sha512:5589ea0c6894546ca05b8a9dba923b072d70b5cb7893cb0a5af0aa5ef536e94676717153427bb90cf8f2afa801f4add62f3777b0e72ef09011c5786fa9d0bcef",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        },
        "32bit": {
            "url": "https://cdn.apifox.cn/download/2.3.24/Apifox-windows-x86-2.3.24.exe#/dl.7z",
            "hash": "sha512:b819918c509829f418692346961ec1a621e9d95b85d7badc59cad53e4f4bf317d90d8249f0023f80a0edae99df18aef2207d1d0eef3693b05a31b7df5d87752d",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        }
    },
    "shortcuts": [
        [
            "Apifox.exe",
            "Apifox",
            "--user-data-dir=\"$dir\\UserData\""
        ]
    ],
    "persist": "UserData",
    "checkver": {
        "url": "https://cdn.apifox.cn/download/latest.yml",
        "regex": "version: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.apifox.cn/download/$version/Apifox-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://cdn.apifox.cn/download/latest.yml",
                    "regex": "sha512: $base64"
                }
            },
            "32bit": {
                "url": "https://cdn.apifox.cn/download/$version/Apifox-windows-x86-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://cdn.apifox.cn/download/x32/latest.yml",
                    "regex": "sha512: $base64"
                }
            }
        }
    }
}
