      "hash": "66a1fbe62564219857af2f24bd3ab6436d0c13b80de502b1ae22939c2686d0ac",
      "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
