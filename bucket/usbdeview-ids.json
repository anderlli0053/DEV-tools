 "post_install": [
  "if (Test-Path \"$(appdir nirlauncher $global)\") {",
  "   Copy-Item \"$dir/usb.ids\" \"$(appdir nirlauncher $global)/current/NirSoft/usb.ids\"",
  "}",
  "if (Test-Path \"$(appdir nirlauncher $global)\") {",
  "   Copy-Item \"$dir/usb.ids\" \"$(appdir nirlauncher $global)/current/NirSoft/x64/usb.ids\"",
  "}"
 ],
