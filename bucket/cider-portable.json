    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.7-beta.205/Cider-Setup-1.5.7-beta.205.exe#/dl.7z",
            "hash": "sha512:f6ccc765beb400f83678f25432392948d765e9a8bcf99c9cd9ce3737b10567934d73f80f78e68f5cbd5ba5ca4d73fb3a2b84ba0af8fb105ba5f053eacef82933",
