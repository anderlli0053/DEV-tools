    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ciderapp/cider-releases/releases/download/v1.5.7-beta.204/Cider-Setup-1.5.7-beta.204.exe#/dl.7z",
            "hash": "sha512:84e062692d10ba7eb1d089a2e831dc0c1f0592344017ac2a37d146d61842c2f5c3f63b8be69697b1146345833e16c3fa1914cb33bdc70528928f8e160a681a26",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal"
