{
    "version": "10.3.0",
    "description": "Multiplayer-oriented source port for Doom",
    "homepage": "https://odamex.net/",
    "license": "GPL-2.0-or-later",
    "notes": [
        "Place WAD files (game data) in:",
        "",
        "    $persist_dir\\..\\_doom"
    ],
    "architecture": {
        "32bit": {
            "url": "https://downloads.sourceforge.net/project/odamex/Odamex/10.3.0/odamex-win32-10.3.0.zip",
            "hash": "c8468e81cbcf0e1e469c7d87045ae097ea3b54ee9edb1dc2b2f544972ef88004"
        },
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/odamex/Odamex/10.3.0/odamex-win64-10.3.0.zip",
            "hash": "b335a2730f16ae2259ca7736bf0059fb425d316bb47bcc0cf39df46a5cea43ee"
        }
    },
    "pre_install": "New-Item -ItemType Directory -Force -Path $persist_dir\\..\\_doom | Out-Null",
    "env_set": {
        "DOOMWADDIR": "$persist_dir\\..\\_doom"
    },
    "shortcuts": [
        [
            "odamex.exe",
            "Odamex"
        ],
        [
            "odalaunch.exe",
            "Odalaunch"
        ]
    ],
    "checkver": {
        "regex": ">Version ([a-zA-Z\\d.\\-_]+):"
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://downloads.sourceforge.net/project/odamex/Odamex/$version/odamex-win32-$version.zip"
            },
            "64bit": {
                "url": "https://downloads.sourceforge.net/project/odamex/Odamex/$version/odamex-win64-$version.zip"
            }
        }
    }
}
