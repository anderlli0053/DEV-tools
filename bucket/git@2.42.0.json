{
  "version": "2.42.0",
  "description": "Distributed version control system",
  "homepage": "https://gitforwindows.org",
  "license": "GPL-2.0-only",
  "#notes": [
    "Set Git Credential Manager Core by running: \"git config --global credential.helper manager\"",
    "",
    "To add context menu entries, run '$dir\\install-context.reg'",
    "",
    "To create file-associations for .git* and .sh files, run '$dir\\install-file-associations.reg'"
  ],
  "architecture": {
    "64bit": {
      "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v2.42.0.windows.1/PortableGit-2.42.0-64-bit.7z.exe#/dl.7z",
      "hash": "d394800e5eafa11814ff15f8631bd6f5379f7fbef347cf23a6d76cdbc42e23bd"
    },
    "32bit": {
      "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v2.42.0.windows.1/PortableGit-2.42.0-32-bit.7z.exe#/dl.7z",
      "hash": "e7d7da5ecd0e5eaa13efd2f8464e92fb58743552a21c3f2d2c630d678bc40e2a"
    }
  },
  "post_install": [
    "# ref: [PortableGit post-install]<https://github.com/git-for-windows/build-extra/tree/33ce2964376587bbe7fcf97789470701178087af/portable/root>[`@`](https://archive.is/BSBYG)",
    "#  ... from CMD: `start \"\" /min \"%COMSPEC%\" /d/c \"DIR\\post-install.bat\"`",
    "if (test-path \"$dir\\post-install.bat\") { start-process \"$dir\\post-install.bat\" -WindowStyle hidden }",
    "git config --global credential.helper manager"
  ],
  "env_set": {
    "GIT_INSTALL_ROOT": "$dir"
  },
  "bin": [
    "bin\\sh.exe",
    "bin\\bash.exe",
    "cmd\\git.exe",
    "cmd\\gitk.exe",
    "cmd\\git-gui.exe",
    "cmd\\scalar.exe",
    "usr\\bin\\tig.exe",
    "git-bash.exe"
  ],
  "shortcuts": [
    [
      "git-bash.exe",
      "Git Bash",
      "--cd-to-home"
    ],
    [
      "cmd\\git-gui.exe",
      "Git GUI"
    ]
  ],
  "checkver": {
    "url": "https://api.github.com/repos/git-for-windows/git/releases/latest",
    "jsonpath": "$..browser_download_url",
    "regex": "download/v(?<tag>[\\d.]+windows\\.\\d)/PortableGit-([\\d.]+)-64"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v$matchTag/PortableGit-$version-64-bit.7z.exe#/dl.7z"
      },
      "32bit": {
        "url": "https://ghproxy.com/https://github.com/git-for-windows/git/releases/download/v$matchTag/PortableGit-$version-32-bit.7z.exe#/dl.7z"
      }
    },
    "hash": {
      "url": "https://github.com/git-for-windows/git/releases/tag/v$matchTag",
      "regex": "(?s)$basename.*?$sha256"
    }
  }
}
