  "homepage": "https://github.com/adobe-fonts/source-han-mono",
  "license": "OFL-1.1-RFN",
  "url": "https://ghproxy.com/https://github.com/adobe-fonts/source-han-mono/releases/download/1.002/SourceHanMono.ttc",
