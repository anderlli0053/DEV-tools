{
    "version": "1.0.6.0",
    "description": "Tool to find silent switches for various software installers to enable unattended installations.",
    "homepage": "https://www.appdeploynews.com/adn-silent-switch-finder/",
    "license": "Freeware",
    "url": "https://www.appdeploynews.com/downloads/ADN_Silent_Switch_Finder/ADN%20Silent%20Switch%20Finder1.0.6.0.exe",
    "hash": "sha256:374ac9a265b42127a50d0ac784e8bf86fde42fba71ae4096148b554579a0c453",
    "installer": {
        "script": [
            "# Scoop downloads the file with a sanitized name",
            "# Find the downloaded .exe file and rename it",
            "$downloadedExe = Get-ChildItem -Path $dir -Filter \"*.exe\" | Select-Object -First 1",
            "if ($downloadedExe) {",
            "    Write-Host \"Renaming '$($downloadedExe.Name)' to 'ADN-Silent-Switch-Finder.exe'\"",
            "    Rename-Item -Path $downloadedExe.FullName -NewName \"ADN-Silent-Switch-Finder.exe\" -Force",
            "} else {",
            "    Write-Error \"No .exe file found in $dir\"",
            "}"
        ]
    },
    "bin": "ADN-Silent-Switch-Finder.exe",
    "shortcuts": [
        [
            "ADN-Silent-Switch-Finder.exe",
            "ADN Silent Switch Finder"
        ]
    ],
    "checkver": {
        "url": "https://www.appdeploynews.com/adn-silent-switch-finder/",
        "regex": "ADN Silent Switch Finder ([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://www.appdeploynews.com/downloads/ADN_Silent_Switch_Finder/ADN%20Silent%20Switch%20Finder$version.exe",
        "hash": {
            "mode": "download"
        }
    }
}