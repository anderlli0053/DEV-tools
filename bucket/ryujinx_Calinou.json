{
  "version": "1.1.861",
  "description": "A simple, experimental Nintendo Switch emulator",
  "homepage": "https://ryujinx.org/",
  "license": {
    "identifier": "MIT",
    "url": "https://github.com/Ryujinx/Ryujinx/blob/master/LICENSE.txt"
  },
  "notes": [
    "ATTENTION: Ryujinx requires Nintendo Switch firmware and a prod.keys file to function.",
    "Learn more at https://github.com/Ryujinx/Ryujinx/wiki/Ryujinx-Setup-&-Configuration-Guide"
  ],
  "architecture": {
    "64bit": {
      "url": "https://ghproxy.com/https://github.com/Ryujinx/release-channel-master/releases/download/1.1.861/ryujinx-1.1.861-win_x64.zip",
      "hash": "1e8191629fb49362fdb52ae4498a908e50bfa4e423a652582f0086ec5b8c64e5"
    }
  },
  "extract_dir": "publish",
  "pre_install": [
    "if (!(Test-Path \"$persist_dir\")) {",
    "   New-item \"$persist_dir\\portable\" -ItemType Directory | Out-Null",
    "   if (Test-Path \"$env:APPDATA\\Ryujinx\") {",
    "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
    "       Copy-Item -Path \"$env:APPDATA\\Ryujinx\\*\" -Destination \"$persist_dir\\portable\" -Recurse",
    "       Remove-Item -Path \"$env:APPDATA\\Ryujinx\" -Recurse",
    "   }",
    "}"
  ],
  "bin": "Ryujinx.exe",
  "shortcuts": [
    [
      "Ryujinx.exe",
      "Ryujinx"
    ]
  ],
  "persist": "portable",
  "checkver": {
    "github": "https://github.com/Ryujinx/release-channel-master"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://ghproxy.com/https://github.com/Ryujinx/release-channel-master/releases/download/$version/ryujinx-$version-win_x64.zip"
      }
    }
  }
}
