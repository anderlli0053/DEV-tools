{
    "homepage": "https://github.com/Dreamacro/clash/wiki/Premium-Core-Features",
    "description": "close-sourced pre-built Clash binary with TUN support and more (it's free)",
    "version": "2023.07.22",
    "license": "Proprietary",
    "persist": [
        "config.yaml",
        "Country.mmdb"
    ],
    "pre_install": [
        "$config = \"$dir\\config.yaml\"",
        "$value  = \"# Configuration reference:",
        "# https: //github.com/Dreamacro/clash/wiki/configuration\"",
        "if (!(Test-Path $config)) {",
        "    Add-Content -Path $config -Value $value",
        "}",
        "$mmdb     = \"$dir\\Country.mmdb\"",
        "$mmdb_url = \"https://cdn.jsdelivr.net/gh/Hackl0us/GeoIP2-CN@release/Country.mmdb\"",
        "if (!(Test-Path $mmdb)) {",
        "   Invoke-WebRequest -uri $mmdb_url -OutFile $mmdb",
        "}"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-amd64-2023.07.22.zip",
            "hash": "b1969ee89b5720c5880588a760f321a678a2d75828479a57b5d3588d1ffe27ac",
            "bin": [
                [
                    "clash-windows-amd64.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-amd64.exe",
                    "clash-premium"
                ]
            ]
        },
        "32bit": {
            "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-386-2023.07.22.zip",
            "hash": "70fd9bb5d3afc84036f8d7ae6688b6d3c2eb060110cb23d4d8417c76e0da3f1a",
            "bin": [
                [
                    "clash-windows-386.exe",
                    "clashd",
                    "-d $dir"
                ],
                [
                    "clash-windows-386.exe",
                    "clash-premium"
                ]
            ]
        }
    },
    "suggest": {
        "Dashboard": [
            "clash-dashboard",
            "yacd"
        ],
        "Daemon": "nssm"
    },
    "checkver": {
        "url": "https://github.com/Dreamacro/clash/releases/tag/premium",
        "regex": "Premium\\s+([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-amd64-$version.zip"
            },
            "32bit": {
                "url": "https://github.com/Dreamacro/clash/releases/download/premium/clash-windows-386-$version.zip"
            }
        }
    }
}
