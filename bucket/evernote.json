    ],
    "checkver": {
        "url": "https://evernote.com/download",
        "regex": "Evernote-(?<Ver>[\\d.]+)-win-ddl-ga-(?<Build>[\\w-]+)-setup\\.exe",
        "replace": "${Ver}.${Build}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn1.evernote.com/boron/win/builds/Evernote-$matchVer-win-ddl-ga-$matchBuild-setup.exe#/dl.7z"
