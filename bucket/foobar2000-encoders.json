 },
 "uninstaller": {
  "script": [
   "$FoobarDir = $(appdir foobar2000 $global)",
   "if (Test-Path \"$FoobarDir\") {",
   "    Get-ChildItem -Path \"$FoobarDir\\current\" -Filter \"encoders\" | Remove-Item -Force -Recurse",
   "}"
  ]
