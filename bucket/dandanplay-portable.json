    "pre_install": [
        "@('DandanDb.db', 'library.json') | ForEach-Object {",
        "    if (Test-Path \"$persist_dir\\$_\") { Copy-Item \"$persist_dir\\$_\" \"$dir\\\" -ErrorAction 'SilentlyContinue' -Force | Out-Null }",
        "}"
