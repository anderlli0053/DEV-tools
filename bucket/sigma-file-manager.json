            "hash": "sha256:30edd5d3bdeccd545e3880d40c706cf0cf62c3c12357c46d36746afca6377be1"
        }
    },
    "installer": {
        "script": [
            "$7zip = \"$(appdir '7zip')\\current\\7z.exe\"",
            "",
            "if (!(Test-Path $7zip)) {",
            "    $7zip = \"$env:ProgramFiles\\7-Zip\\7z.exe\"",
            "    if (!(Test-Path $7zip)) {",
            "        error '7-Zip is required'",
            "        exit 1",
            "    }",
            "}",
            "",
            "$installerFile = Get-ChildItem \"$dir\" -Filter *.exe | Select-Object -First 1",
            "& $7zip x \"$installerFile\" -o\"$dir\\_tmp\" -y | Out-Null",
            "",
            "$sigmaExe = Get-ChildItem \"$dir\\_tmp\" -Recurse -Filter sigma-file-manager.exe | Select-Object -First 1",
            "if ($sigmaExe) {",
            "    Move-Item $sigmaExe.FullName \"$dir\\sigma-file-manager.exe\" -Force",
            "}",
            "",
            "Remove-Item \"$dir\\_tmp\" -Recurse -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"$installerFile\" -Force -ErrorAction SilentlyContinue"
        ]
    },
    "bin": "sigma-file-manager.exe",
    "shortcuts": [
        [
            "sigma-file-manager.exe",
            "Sigma File Manager"
        ]
    ],
    "checkver": {
        "url": "https://github.com/aleksey-hoffman/sigma-file-manager/releases",
        "regex": "Sigma\\.File\\.Manager_([\\w.-]+)_x64-setup\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/aleksey-hoffman/sigma-file-manager/releases/download/v$version/Sigma.File.Manager_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "download"
        }
    }
}