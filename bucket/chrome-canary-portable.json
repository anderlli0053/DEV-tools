            "hash": "328e9731bcc19161a9093cfca1d16704c888741403e902726643d2a0f1eacf18"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/kbgtl5vz4fkaywo75llv4ihf2q_141.0.7377.0/141.0.7377.0_chrome_installer.exe#/dl.7z",
