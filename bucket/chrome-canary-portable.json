            "hash": "e376c590ce15ef736d4ec9d82163b21eb0718c47880e475bec96a2a9ed72b96a"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/acwluuups3ddbvg3jdu5njr6yevq_141.0.7343.0/141.0.7343.0_chrome_installer.exe#/dl.7z",
