            "hash": "e2abfaed9511f9440cf6093ccad38196e908364352aa4f8efe62413e71ebfcc9"
        }
    },
    "installer": {
        "script": "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal"
