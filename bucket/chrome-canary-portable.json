            "hash": "6931614bc2e0ce1b9fd0d6dcd2bb38551ba39f43551218b42ed357779b8924ef"
        }
    },
    "installer": {
        "script": "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal"
