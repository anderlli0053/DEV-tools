            "hash": "e9671b530cddc834526a7f87858d48b7132cfc6724b9ba71e02c1f2f9e024c90"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/j5jo2ejjcfg7desek24af2rzqu_123.0.6263.0/123.0.6263.0_chrome_installer.exe#/dl.7z",
            "hash": "c9cc58542ebef1abe611edc1de26306b752db2cb2847b2bdccd02ce2593178c8"
        }
    },
    "installer": {
        "script": "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal"
