            "hash": "f47c338ae23eedda64a72c8dc79b72678e0b32301e1fe9756a3ff7c2dab006ff"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/acqmlz2j7n5ek5bzdk2aaa6oox3q_125.0.6391.0/125.0.6391.0_chrome_installer.exe#/dl.7z",
            "hash": "bba00c63aeac13c5738d7f76187376a924ef95402095665dbf92dcb8fe316ca7"
        }
    },
    "installer": {
        "script": "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal"
