    ],
    [
      "DisplayCAL-scripting-client.exe",
      "DisplayCAL\\Scripting Client"
    ],
    [
      "DisplayCAL-synthprofile.exe",
      "DisplayCAL\\Synthetic Profile Creator"
    ],
    [
